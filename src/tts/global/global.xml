<!-- #include !/ui/Clock -->
<VerticalLayout
  color="black"
  id="floatingChessClockUI"
  active="false"
  height="10"
  width="0"
  allowDragging="true"
  returnToOriginalPositionWhenReleased="false"
  rectAlignment="UpperCenter"
  offsetXY="0 -75"
  outlineSize="1 1"
  outline="#303030"
>
  <HorizontalLayout color="transparent" preferredHeight="0" spacing="8">
    <VerticalLayout ignoreLayout="true" width="160" height="40" outlineSize="1 1" outline="#303030" color="black">
      <Button 
        id="toggleClockButton"
        onClick="toggleClockButton"
        tooltip="Left click to switch player clock, right click to pause"
        colors="#FFFFFF|#DFDFDF">
        <Text id="toggleClockText">Chess Clocks Paused</Text>
      </Button>
    </VerticalLayout>
  </HorizontalLayout>
</VerticalLayout>

