<!-- #include !/ui/Menu -->
<!-- The floating menu spawned in the bottom right corner-->

<!-- Height should be NUM_BUTTONS * 58-->
<VerticalLayout
  height="232"
  id="legionFloatingMenu"
  offsetXY="-6 60"
  rectAlignment="LowerRight"
  spacing="6"
  width="52"
>
  <Button fontSize="10" onClick="toggleWelcomeDialog">Welcome</Button>
  <Button fontSize="10" onClick="toggleChessClockUI" tooltip="Toggle using chess clocks this game">Chess Clocks</Button>
  <Button fontSize="10" interactable="false">-</Button>
  <Button fontSize="10" interactable="false">-</Button>
</VerticalLayout>

<!-- #include !/ui/Welcome -->
<!-- Welcome/Help/Changelog Dialog -->

<Panel 
  active="true"
  allowDragging="true"
  color="#40404080"
  height="300"
  id="welcomeDialog"
  outline="#202020"
  rectAlignment="CenterCenter"
  returnToOriginalPositionWhenReleased="false"
  width="500"
>
  <Panel 
    color="#202020"
    height="30"
    padding="5"
    rectAlignment="UpperCenter"
    width="500"
  >
    <Text color="#ffffff">Star Wars Regiment for TTS</Text>
  </Panel>
  <Panel
    height="30"
    width="30"
    rectAlignment="UpperRight"
    padding="2"
  >
    <Button onClick="toggleWelcomeDialog">X</Button>
  </Panel>
  <Panel
    height="240"
    padding="5"
    width="500"
  >
    <VerticalScrollView id="welcomeTab1" active="true" color="40404080">
      <VerticalLayout padding="5">
        <Text alignment="UpperLeft" color="#ffffff" fontSize="12">
          <!--Welcome to Star Wars: Regiment for TTS, <b>v0.1a</b>.-->
          Welcome to Star Wars: Regiment for TTS, <b>v0.1a</b>.

          This is a <b>pre-alpha release</b>, and is <textcolor color="#f03333"><b>not suitable for public release</b></textcolor>.

          To access the game updates and announcements visit the discord at <i>https://dsc.gg/swreg</i>.

          <b>CHANGELOG</b>
          (Since last <i>Update</i>)
          <!--(Since last <i>Stable</i>)-->
          - None
        </Text>
      </VerticalLayout>
    </VerticalScrollView>
    <VerticalLayout id="welcomeTab3" active="false">
      <Text alignment="UpperLeft" color="#ffffff" fontSize="12">
        URL to a "cards.json" compatible file.
        This will be additive, and new factions are less supported:
      </Text>
      <InputField
        placeholder="https://go.swlegion.dev/homebrew.json"
        onValueChanged="sideLoadUrlChanged">https://raw.githubusercontent.com/swlegion/tts/main/contrib/cards/homebrew.json</InputField>
      <Button onClick="experimentalSideLoad">Load</Button>
    </VerticalLayout>
  </Panel>
  <Panel 
    color="#202020"
    height="30"
    offsetXY="0 -270"
    padding="5"
    rectAlignment="UpperCenter"
    width="500"
  >
    <HorizontalLayout height="30">
      <Button onClick="showWelcomeTab1">
        <Text fontSize="10" fontStyle="bold">What's New</Text>
      </Button>
      <Button onClick="showWelcomeTab3">
        <Text fontSize="10">Experimental Side Load</Text>
      </Button>
      <Button interactable="false">
        <Text fontSize="10">-</Text>
      </Button>
    </HorizontalLayout>
  </Panel>
</Panel>

